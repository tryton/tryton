<form string="Production" cursor="planned_date">
    <label name="reference"/>
    <field name="reference"/>
    <label name="number"/>
    <field name="number"/>
    <label name="planned_date"/>
    <field name="planned_date"/>
    <label name="effective_date"/>
    <field name="effective_date"/>
    <label name="product"/>
    <field name="product"/>
    <label name="bom"/>
    <field name="bom"/>
    <label name="quantity"/>
    <field name="quantity"/>
    <label name="uom"/>
    <field name="uom"/>
    <notebook>
        <page string="Lines" id="lines">
            <field name="inputs" colspan="2"/>
            <field name="outputs" colspan="2"/>
        </page>
        <page string="Other Info" id="other">
            <label name="company"/>
            <field name="company"/>
            <newline/>
            <label name="warehouse"/>
            <field name="warehouse"/>
            <label name="location"/>
            <field name="location"/>
            <label name="cost"/>
            <field name="cost"/>
        </page>
    </notebook>
    <group col="4" colspan="4" id="state_buttons">
        <label name="state"/>
        <field name="state"/>
        <group col="7" colspan="2" id="buttons">
            <button name="cancel" string="Cancel"
                icon="tryton-cancel"/>
            <button name="draft" string="Draft"/>
            <button name="reset_bom" string="Reset to BOM"
                icon="tryton-clear"/>
            <button name="wait" string="Wait"/>
            <button name="assign_wizard" string="Assign"
                icon="tryton-go-next"/>
            <button name="run" string="Run"
                icon="tryton-go-next"/>
            <button name="done" string="Done"
                icon="tryton-go-next"/>
        </group>
    </group>
</form>
